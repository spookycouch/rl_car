<?xml version="1.0"?>
<robot name="romi">

  <material name="pink">
    <color rgba="1 0.5 0.8 1"/>
  </material>
  <material name="darkgrey">
    <color rgba="0.25 0.25 0.25 1"/>
  </material>
  <material name="lightgrey">
    <color rgba="0.7 0.7 0.7 1"/>
  </material>

  <link concave="yes" name="base_link">
    <visual>
      <geometry>
        <mesh filename="base.stl"/>
      </geometry>
      <material name="pink"/>
    </visual>
    <collision concave="yes">
      <geometry>
        <mesh filename="base.stl"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 -0.05 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <link name="wheel_l">
    <visual>
      <geometry>
        <cylinder length="0.008" radius="0.035"/>
      </geometry>
      <material name="darkgrey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.008" radius="0.035"/>
      </geometry>
    </collision>
    <!-- contact taken from racecar_differential.urdf -->
    <contact>
      <lateral_friction value="1.0"/>
      <rolling_friction value="0.0"/>
      <stiffness value="300000"/>
      <damping value="1000"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="wheel_l_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_l"/>
    <origin rpy="0 1.57 0" xyz="0.0705 0 0.01"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="wheel_r">
    <visual>
      <geometry>
        <cylinder length="0.008" radius="0.035"/>
      </geometry>
      <material name="darkgrey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.008" radius="0.035"/>
      </geometry>
    </collision>
    <!-- contact taken from racecar_differential.urdf -->
    <contact>
      <lateral_friction value="1.0"/>
      <rolling_friction value="0.0"/>
      <stiffness value="300000"/>
      <damping value="1000"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="wheel_r_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_r"/>
    <origin rpy="0 1.57 0" xyz="-0.0705 0 0.01"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="wheel_rear">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.009"/>
      </geometry>
      <material name="darkgrey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.01" radius="0.009"/>
      </geometry>
    </collision>
    <contact>
      <lateral_friction value="0.0"/>
      <rolling_friction value="0.0"/>
      <stiffness value="300000"/>
      <damping value="1000"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="wheel_rear_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rear"/>
    <origin rpy="0 1.57 0" xyz="0 -0.05 -0.0152"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="attached_load">
    <visual>
      <geometry>
        <box size="0.08 0.06 0.025"/>
      </geometry>
      <material name="darkgrey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.08 0.06 0.025"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="attached_load_joint" type="fixed">
    <parent link="base_link"/>
    <child link="attached_load"/>
    <origin rpy="0 0 0" xyz="0 -0.015 0.0125"/>
  </joint>

  <link concave="yes" name="gripper">
    <visual>
      <geometry>
        <mesh filename="gripper.stl"/>
      </geometry>
      <material name="lightgrey"/>
    </visual>
    <collision concave="yes">
      <geometry>
        <mesh filename="gripper.stl"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="gripper_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gripper"/>
    <origin rpy="0 0 3.142" xyz="0 -0.1 0.005"/>
  </joint>

</robot>
