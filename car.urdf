<?xml version="1.0"?>
<robot name="romi">

  <material name="pink">
    <color rgba="1 0.5 0.8 1"/>
  </material>
  <material name="darkgrey">
    <color rgba="0.25 0.25 0.25 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.15"/>
      </geometry>
      <material name="pink"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.01" radius="0.15"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <link name="wheel_l">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.05"/>
      </geometry>
      <material name="darkgrey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.01" radius="0.05"/>
      </geometry>
    </collision>
    <!-- contact taken from racecar_differential.urdf -->
    <contact>
      <lateral_friction value=".3"/>
      <rolling_friction value="0.0"/>
      <stiffness value="300000"/>
      <damping value="1000"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="wheel_l_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_l"/>
    <origin rpy="0 1.57 0" xyz="0.165 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="wheel_r">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.05"/>
      </geometry>
      <material name="darkgrey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.01" radius="0.05"/>
      </geometry>
    </collision>
    <!-- contact taken from racecar_differential.urdf -->
    <contact>
      <lateral_friction value=".3"/>
      <rolling_friction value="0.0"/>
      <stiffness value="300000"/>
      <damping value="1000"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="wheel_r_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_r"/>
    <origin rpy="0 1.57 0" xyz="-0.165 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="wheel_rear">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.02"/>
      </geometry>
      <material name="darkgrey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.01" radius="0.02"/>
      </geometry>
    </collision>
    <contact>
      <lateral_friction value="0.0"/>
      <rolling_friction value="0.0"/>
      <stiffness value="300000"/>
      <damping value="1000"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="wheel_rear_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rear"/>
    <origin rpy="0 1.57 0" xyz="0 -0.1 -0.03"/>
    <axis xyz="0 0 -1"/>
  </joint>
</robot>
